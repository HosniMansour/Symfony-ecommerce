<div class="header navbar navbar-inverse ">
	<div class="navbar-inner">
		<div class="header-seperation">
			<ul class="nav pull-left notifcation-center" id="main-menu-toggle-wrapper" style="display:none">
				<li class="dropdown"> <a id="main-menu-toggle" href="#main-menu"  class="" >
						<div class="iconset top-menu-toggle-white"></div>
					</a>
				</li>
			</ul>
			<a href="{{ path ('web_admin_homepage')}}"><img src="{{ asset('assets/img/logo.png') }}" class="logo" alt=""  data-src="{{ asset('assets/img/logo.png') }}" data-src-retina="{{ asset('assets/img/logo.png') }}" width="106" height="21"/></a>
			<ul class="nav pull-right notifcation-center">
				<li class="dropdown" id="header_task_bar"> <a target="_blank" href="{{ path ('web_web_homepage')}}" class="dropdown-toggle active" data-toggle="">
						<div class="iconset top-home"></div>
					</a>
				</li>
				{% if is_granted('ROLE_SUPER_ADMIN') %}
					<li class="dropdown" id="header_inbox_bar" > <a href="{{ path('form_index') }}" class="dropdown-toggle" >
							<div class="iconset top-messages"></div>
							{%  set x = countNonLu() %}
							<span class="badge" id="msgs-badge">{{ x }}</span> </a>
					</li>
				{% endif %}
				<li class="dropdown" id="portrait-chat-toggler" style="display:none">
					<a href="#sidr" class="chat-menu-toggle">
						<div class="iconset top-chat-white "></div>
					</a>
				</li>
			</ul>
		</div>
		<div class="header-quick-nav" >
			<div class="pull-left">
				<ul class="nav quick-section">
					<li class="quicklinks"> <a href="#" class="" id="layout-condensed-toggle" >
							<div class="iconset top-menu-toggle-dark"></div>
						</a>
					</li>
				</ul>
				<ul class="nav quick-section">
					<li class="quicklinks">
						<a href="javascript:;" onclick="window.location.reload(false);" >
							<div class="iconset top-reload"></div>
						</a>
					</li>
				</ul>
			</div>
			<div class="pull-right">
				<div class="chat-toggler"> <a href="#" class="dropdown-toggle"  data-placement="bottom"  data-content='' data-toggle="dropdown" data-original-title="">
						<div class="user-details">
							<div class="username"> {{ app.user.nom }} <span class="bold">{{ app.user.prenom }}</span> </div>
						</div>
						<div class="iconset"></div>
					</a>
					{%
						set img = 'img/default-avatar.png'
					%}
					{% if app.user.image is defined %}
						{% if app.user.image is not null %}
							{% set img = app.user.image.image %}
						{% endif %}
					{% endif %}
					<div class="profile-pic"> <img src="{{ asset(img) }}"  alt="" data-src="{{ asset(img) }}" data-src-retina="{{ asset(img) }}" width="35" height="35" /> </div>
				</div>
				<ul class="nav quick-section ">
					<li class="quicklinks"> <a data-toggle="dropdown" class="dropdown-toggle  pull-right " href="#" id="user-options">
							<div class="iconset top-settings-dark "></div>
						</a>
						<ul class="dropdown-menu  pull-right" role="menu" aria-labelledby="user-options">
							{% if is_granted('ROLE_SUPER_ADMIN') %}
								<li><a href="{{ path('user_edit', { 'id': app.user.id }) }}">Profile</a> </li>
								<li class="divider"></li>
							{% endif %}
							<li><a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-power-off"></i>&nbsp;&nbsp;Log Out</a></li>
						</ul>
					</li>
				</ul>
			</div>
		</div>
	</div>
</div>