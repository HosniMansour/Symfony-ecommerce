{% extends '::layout/index.html.twig' %}

{% block body %}
{% include 'WebWebBundle:Default:layout/slide.html.twig' %}
<br/><br/>
<div class="contact">
    <div class="container">
        <div class="contact-form">
            <div class="col-md-3"><h3>Demande de Devis</h3></div>
            <div class="col-md-9 contact-form-right">
                <form method="POST" action="{{path ('demande')}}" class="form-horizontal" >
                    {% if msj is defined %}
                    {% if msj == true %}
                    <div class="alert alert-success fade in">
                        <button data-dismiss="alert" class="close close-sm" type="button">
                            <i class="fa fa-times"></i>
                        </button>
                        <strong>Message envoyé!</strong> Nous vous rappellerons dans les plus brefs délais.
                    </div>
                    {% endif %}
                    {% endif %}
                    <br/>
                    <div class="col-md-12">
                        <h4>Objet de votre demande:</h4>
                        <div class="form-group">
                            <div class="col-sm-8 icheck minimal pull-right">
                                <div class="form-group">
                                    <br/>
                                    <input type="checkbox" name="objet[]" value="Equipement Cabinet"><span style="color:black;">  Equipement Cabinet</span><br><br>
                                    <input type="checkbox" name="objet[]" value="Cabinet Réalisé" ><span style="color:black;">  Cabinet Réalisé</span><br><br>
                                    <input type="checkbox" name="objet[]" value="Accessoires orthopédiques" > <span style="color:black;">  Accessoires orthopédiques</span><br><br>
                                    <input type="checkbox" name="objet[]" value="Aide a la marche" > <span style="color:black;">  Aide a la marche</span><br><br>
                                    <input type="checkbox" name="objet[]" value="Sabot orthopédique" > <span style="color:black;">  Sabot orthopédique</span><br><br>
                                    <input type="checkbox" name="objet[]" value="Autre" checked> <span style="color:black;">  Autre</span><br><br>
                                </div>
                            </div>
                        </div>
                    </div>
                    <h4>Précisez:</h4>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <textarea class="form-control" name="message" rows="5" placeholder="Message..." required=""></textarea>
                        </div>
                    </div>
                    <h4>Budget</h4>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <input type="text" name="budget" class="form-control" placeholder="Budget">
                        </div>
                    </div>
                    <h4>Cordonnées:</h4>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <input type="text" name="nom" class="form-control" placeholder="Nom et Prenom">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <input type="email" name="email" class="form-control" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <input type="text" name="tele" class="form-control" placeholder="Téléphone">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-12">
                            <textarea class="form-control" name="adresse" rows="2" placeholder="Adresse..." required=""></textarea>
                        </div>
                    </div>
                    <input type="hidden" name="type" value="demendedevis" class="form-control" >
                    <button type="submit" class="btn btn-info pull-right">Envoyer</button>
                </form>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
<br><br>
{% endblock %}

{% block javascripts %}
    <script type='text/javascript' src="js/custom-script.js"></script>
    <script type='text/javascript' src="{{ asset('js/owl.carousel.min.js') }}"></script>
    <script type="text/javascript">
        var $ = jQuery.noConflict();
        if($('.owl-theme').hasClass('main-slider'))
        {
            $(document).ready(function() {
                $('.main-slider').owlCarousel({
                    navigation : true,
                    slideSpeed : '500',
                    paginationSpeed : '500',
                    singleItem: true,
                    autoHeight : true,
                    navigationText : ['<i class="fa fa-angle-left"></i>','<i class="fa fa-angle-right"></i>'],
                    autoPlay:400000,
                    transitionStyle : 'fade'
                });
            });
        }
    </script>
{% endblock %}